<h1>Blackjack!</h1>

<div class="well">
  <h4>Dealer's cards:</h4>
  <% card_counter = 0 %>
  <% session[:dealer_cards].each do |card| %>
    
    <% if card_counter == 0 && @player_stay == false%>
      <img src='/images/cards/cover.jpg' class='card_image'>
    <% else %>
      <%= card_image(card) %>
    <% end %>
    <% card_counter += 1 %>
  <% end %>
  </br>
  <% if @show_dealer_button == true %>
    <p>
      <h5>Dealer has <%= calculate_total(session[:dealer_cards])%> and will hit.</h5>
      <form action="/game/dealer/hit" method='post'>
        <input type="submit" class="btn btn-primary" value="Click to see dealer's next card"/>
      </form>
    </p>
  <% end %>
</div>


<br/>
<div class="well">
  <h4><%= session[:player_name] %>'s cards:</h4>
      <% session[:player_cards].each do |card| %>
      <%= card_image(card) %>
    <% end %>
  <% if @player_stay == true %>
    <h5><%= session[:player_name] %> has chosen to stay at <%= calculate_total(session[:player_cards]) %>
    </h5>
  <% end %>
</div>


<% if @show_hit_or_stay_buttons %>
  <p>
    <h5>What would <%= session[:player_name] %> like to do?
      <%= session[:player_name] %> has <%= calculate_total(session[:player_cards]) %>
    </h5>
    <form id="hit_form" action="/game/player/hit" method='post'>
      <input type="submit" class="btn btn-success" value="Hit" />
    </form>
    <form id="stay_form" action="/game/dealer/turn" method='get'>
      <input type="submit" class="btn btn-warning" value="Stay" />
    </form>
  </p>
<% end %>
